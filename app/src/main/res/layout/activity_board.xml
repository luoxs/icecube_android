<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoardActivity">

    <ImageButton
        android:id="@+id/btback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginStart="75dp"
        android:layout_marginTop="184dp"
        android:src="@drawable/back" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="260dp"
        android:layout_marginRight="75dp"
        android:background="#888888" />
    <ImageButton
        android:id="@+id/imageback"
        android:layout_width="560dp"
        android:layout_height="560dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:background="@color/white"
        android:contentDescription="@string/todo2"
        android:scaleType="fitCenter"
        android:src="@drawable/center"/>

    <TextView
        android:id="@+id/txttemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="0°C"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="590dp"
        android:textColor="@color/white"
        android:textSize="100sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="990dp"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="76dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btfresh"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"
            android:src="@drawable/fresh"/>

        <ImageButton
            android:id="@+id/bticecream"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"
            android:src="@drawable/icecream"/>

        <ImageButton
            android:id="@+id/btdrink"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"
            android:src="@drawable/drink"/>

        <ImageButton
            android:id="@+id/btfruit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"
            android:src="@drawable/fruit"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="1080dp"
        android:orientation="horizontal"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="76dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:text="-20°C"
            android:textAlignment="center"
            android:textColor="#888888"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:text="-15°C"
            android:textAlignment="center"
            android:textColor="#888888"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:text="4°C"
            android:textAlignment="center"
            android:textColor="#888888"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:text="8°C"
            android:textAlignment="center"
            android:textColor="#888888"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btunit"
        android:layout_width="124dp"
        android:layout_height="30dp"
        android:layout_marginTop="1200dp"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:src="@drawable/ceils"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="1280dp"
        android:orientation="horizontal"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="76dp">

        <ImageButton
            android:id="@+id/btminus"
            android:layout_width="0dp"
            android:layout_weight="72"
            android:layout_height="36dp"
            android:scaleType="center"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/minus"
            android:background="#FFFFFF"/>

        <ProgressBar
            android:layout_width="0dp"
            android:layout_weight="488"
            android:max="100"
            android:progress="30"
            android:progressTint="@color/blue"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/btadd"
            android:layout_width="0dp"
            android:layout_weight="72"
            android:layout_height="36dp"
            android:scaleType="center"
            android:layout_marginTop="0dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/add"
            android:background="#FFFFFF"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_marginTop="1388dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:background="@drawable/round_corner">

        <ImageButton
            android:id="@+id/btmode"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="62dp"
            android:contentDescription="TODO"
            android:src="@drawable/mode"/>

        <ImageButton
            android:id="@+id/btpower"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:contentDescription="TODO" 
            android:src="@drawable/power"/>

        <ImageButton
            android:id="@+id/btstatus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="62dp"
            android:contentDescription="TODO"
            android:src="@drawable/turbo"/>
    </RelativeLayout>
    
    <Button
        android:id="@+id/btsite"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="1536dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white"
        android:textAlignment="center"
        android:textColor="#4963A7"
        android:textAllCaps="false"
        android:text="www.icecube.ru"
        android:textSize="20sp"/>

    
</RelativeLayout>