<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ScanActivity">

    <ImageButton
        android:id="@+id/btback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginStart="62dp"
        android:layout_marginTop="117dp"
        android:src="@drawable/goback" />

    <ImageView
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/iconlogo"/>

    <TextView
        android:layout_width="210dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="148dp"
        android:text="camping fridge &amp; freezer"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/protype"
        android:layout_width="106dp"
        android:layout_height="40dp"
        android:layout_marginTop="438dp"
        android:layout_centerHorizontal="true"
        android:text="IC23"
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="16dp"
        android:layout_marginTop="510dp"
        android:layout_centerHorizontal="true"
        android:text="Hello world"
        android:textAlignment="center"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/prgbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginTop="550dp"
        android:layout_gravity="center_horizontal"
        style="@style/Theme.AppCompat.NoActionBar"/>


    <ImageButton
        android:id="@+id/btscan"
        android:layout_width="370dp"
        android:layout_height="210dp"
        android:layout_marginTop="750dp"
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/todo"
        android:src="@drawable/scan"
        android:scaleType="fitCenter"/>


    <ImageButton
        android:id="@+id/btbluetooth"
        android:layout_width="370dp"
        android:layout_height="210dp"
        android:layout_marginTop="1080dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:contentDescription="@string/todo1"
        android:src="@drawable/bluetooth"
        android:scaleType="fitCenter"/>

    <Button
        android:backgroundTint="@color/white"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="1530dp"
        android:layout_centerHorizontal="true"
        android:text="www.icecube.ru"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textAlignment="center"/>


</RelativeLayout>