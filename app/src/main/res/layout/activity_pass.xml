<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PassActivity">

    <ImageButton
        android:id="@+id/btback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginStart="62dp"
        android:layout_marginTop="117dp"
        android:src="@drawable/goback" />

    <TextView
        android:id="@+id/txtlogo"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="18dp"
        android:text="icecube"
        android:scaleType="fitXY" />

    <ProgressBar
        android:id="@+id/prgbar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="105dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:background="@color/E4"
        android:indeterminateBehavior="repeat"
        android:indeterminateDuration="@integer/material_motion_duration_short_1" />
    <!--android:indeterminateDrawable="@drawable/progressbar_style"-->



    <LinearLayout
        android:layout_width="430dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="730dp"
        android:layout_centerHorizontal="true">


        <EditText
            android:id="@+id/password1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="128dp"
            android:background="@color/E4"
            android:layout_marginRight="65dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:inputType="textNoSuggestions"
            android:maxLength="1"
            android:maxLines="1"
            android:text=""
            android:textColor="#000000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/password2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="128dp"
            android:layout_centerHorizontal="true"
            android:background="@color/E4"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:inputType="textNoSuggestions"
            android:maxLength="1"
            android:maxLines="1"
            android:text=""
            android:textColor="#000000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/password3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="128dp"
            android:background="@color/E4"
            android:focusable="true"
            android:layout_marginLeft="65dp"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:inputType="textNoSuggestions"
            android:maxLength="1"
            android:maxLines="1"
            android:text=""
            android:textColor="#000000"
            android:textSize="24sp" />



    </LinearLayout>



    <TextView
        android:layout_width="688dp"
        android:layout_height="108dp"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:lines="3"
        android:textAlignment="center"
        android:text="Please enter the three-digit combination\nof numbers/letters displayed onth\ncooler/'s LED screen.[0~9,A~F"
        android:textSize="20sp" />

</RelativeLayout>
